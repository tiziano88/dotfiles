[apply]
    #whitespace = fix
[color]
	ui = auto
	interactive = auto
	branch = auto
	diff = auto
	status = auto
[color "diff"]
	old = red
	new = green
	whitespace = yellow
[color "status"]
	untracked = bold yellow
	added = bold blue
	changed = red
[color "branch"]
	current = green
	remote = yellow
[core]
	editor = vim
	whitespace = fix
	excludesfile = /usr/local/google/home/tzn/.gitignore_global
[diff]
	tool = vimdiff
[gui]
	fontui = -family Ubuntu -size -12 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"Ubuntu Mono\" -size -12 -weight normal -slant roman -underline 0 -overstrike 0
[log]
  graph = true
  pretty = format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset"
  abbrev-commit = true
[merge]
#	ff = false
	tool = vimdiff
[mergetool]
	prompt = false
	keepBackup = false
[mergetool "splice"]
	cmd = "gvim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
	trustExitCode = true
[mergetool "vimdiffnice"]
	cmd = vimdiff $MERGED $LOCAL $BASE $REMOTE
[rerere]
	enabled = 0
[user]
	email = tzn@google.com
	name = Tiziano Santoro
[push]
	default = current
[help]
	autocorrect = 1
[alias]
	lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d %Creset%s %Cgreen(%an %cr)%Creset' --abbrev-commit --date=relative
	lga = log --all --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d %Creset%s %Cgreen(%an %cr)%Creset' --abbrev-commit --date=relative
    lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
    lg = !"git lg1"
  amend = commit --amend --no-edit
	g = grep --break --heading --line-number
	up = "!git remote update -p; git merge --ff-only @{u}"
	up1 = pull --ff-only --all -p
[tig "bind"]
	generic = R !git reset --hard %(commit)
[grep]
	extendRegexp = true
	lineNumber = true
