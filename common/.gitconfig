[apply]
  # whitespace = fix
[color]
  ui = auto
  interactive = auto
  branch = auto
  diff = auto
  status = auto
[color "diff"]
  old = red
  new = green
  whitespace = yellow
[color "status"]
  untracked = bold yellow
  added = bold blue
  changed = red
[color "branch"]
  current = green
  remote = yellow
[core]
  editor = vim
  whitespace = fix
  excludesfile = /usr/local/google/home/tzn/.gitignore_global
[diff]
  tool = vimdiff
[gui]
  fontui = -family Ubuntu -size -12 -weight normal -slant roman -underline 0 -overstrike 0
  fontdiff = -family \"Ubuntu Mono\" -size -12 -weight normal -slant roman -underline 0 -overstrike 0
[log]
  graph = true
  pretty = format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset"
  abbrev-commit = true
[merge]
  # ff = false
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
  keepBackup = false
[rerere]
  enabled = 0
[user]
  email = tiziano88@gmail.com
  name = Tiziano Santoro
[push]
  default = current
  followTags = true
[status]
  # short = true
  # branch = true
[help]
  autocorrect = 1
[alias]
  lg =  log --all --graph --abbrev-commit --date=relative --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d %Creset%s %Cgreen(%an %cr)%Creset'
  amend = commit --amend --no-edit
  g = grep --break --heading --line-number
  up = "!git remote update -p; git merge --ff-only @{u}"
  up1 = pull --ff-only --all -p
  tree = log --graph --oneline --decorate
  cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d"
[tig "bind"]
  generic = R !git reset --hard %(commit)
[grep]
  extendRegexp = true
  lineNumber = true
[credential]
  helper = corpsso
[http "https://gopkg.in"]
  followRedirects = true
[url "git@dev.projectwaking.com"]
  insteadOf = https://dev.projectwaking.com
;[url "git@github.com"]
  ;insteadOf = https://github.com
