{
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontFamily": "'Iosevka Slab Medium', 'JetBrains Mono', 'Iosevka SS08', 'Iosevka Term Slab Medium', 'monospace', 'Droid Sans Fallback'",
    "editor.fontSize": 12,
    "editor.rulers": [
        100
    ],
    "editor.accessibilitySupport": "off",
    "editor.fontLigatures": true,
    "editor.formatOnPaste": true,
    "editor.minimap.maxColumn": 100,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "boundary",
    "editor.scrollBeyondLastLine": false,
    "editor.smoothScrolling": true,
    "editor.wordWrapColumn": 100,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.enableSmartCommit": true,
    "go.autocompleteUnimportedPackages": true,
    "keyboard.dispatch": "keyCode",
    "terminal.integrated.rendererType": "dom",
    "vim.textwidth": 100,
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "linkme.rules": [
        {
            "pattern": "([a-z]{1,4})/([^)]+)",
            "url": "https://\\1/\\2"
        }
    ],
    "[cpp]": {
        "editor.tabSize": 2,
    },
    "[rust]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "rust-lang.rust",
    },
    "[yaml]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false,
    },
    "C_Cpp.default.intelliSenseMode": "clang-x64",
    "rewrap.reformat": true,
    "rewrap.autoWrap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "files.autoSave": "off",
    "editor.formatOnSave": true,
    "rust-client.enableMultiProjectSetup": true,
    "bazel.buildifierFixOnFormat": true,
    "markdownlint.run": "onSave",
    "rust-analyzer.serverPath": "rust-analyzer",
    "rust-analyzer.raLspServerPath": "rust-analyzer",
    "rust-analyzer.rainbowHighlightingOn": true,
    "rust-analyzer.trace.server": "messages",
    "rust-analyzer.displayInlayHints": false,
    "rust-analyzer.cargo-watch.allTargets": false
}
