-- vim: syntax=haskell

-- Ref.: http://projects.haskell.org/xmobar/

Config {
  font = "-*-Terminus-medium-r-normal-*-12-*-*-*-*-*-*-*",
  bgColor = "black",
  fgColor = "green",
  position = Bottom,
  -- position = TopSize C 100 10,
  lowerOnStart = False,
  allDesktops = True,
  borderColor = "blue",
  commands = [
    Run StdinReader,
    Run Weather "EGLC" ["-t","<station>: <tempC>C","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000,
    Run DynNetwork ["-t", "rx: <rxbar> | tx: <txbar>", "--bwidth", "4", "--high", "red", "--High", "80"] 10,
    Run Memory ["-t", "Mem: <usedbar>", "--high", "red", "--High", "80"] 10,
    Run TopMem ["--width", "10"] 10,
    Run Swap [] 10,
    Run DiskIO [ ("sda", "Disk I/O: <totalbar>") ] ["--bwidth", "2"] 10,
    Run MultiCpu ["-t", "Cpu: <bar>", "--high", "red", "--High", "80"] 10,
    Run TopProc ["--width", "10"] 10,
    Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
  ],
  template = "%StdinReader% }{ %EGLC% | %dynnetwork% | %memory% [%topmem%] | %swap% | %diskio% | %multicpu% [%top%] | <fc=red>%date%</fc>",
}
