[general]
# pip install keyring
pythonfile = ~/.offlineimap.py
accounts = personal, corp
ui = quiet
maxsyncaccounts = 2

[Account personal]
localrepository = personal-local
remoterepository = personal-remote
autorefresh = 1
quick = 10
status_backend = sqlite

[Account corp]
localrepository = corp-local
remoterepository = corp-remote
autorefresh = 1
quick = 10
status_backend = sqlite

[Repository personal-local]
type = Maildir
localfolders = ~/Maildir/personal

[Repository personal-remote]
type = Gmail
remotehost = imap.gmail.com
remoteuser = tiziano88
remotepasseval = get_password("personal")
#keyring.get_password("offlineimap", "tiziano88@gmail.com")
